

<AdminWindow>:
    md_bg_color: get_color_from_hex("#382B2A")
    MDBackdrop:
        id: backdrop
        on_open: print("on_open")
        on_close: print("on_close")
        left_action_items: [["menu", lambda x: self.open()]]
        title: "POS"
        header_text: "Menu"
        header: True
        background_color: get_color_from_hex("#F1E9C60F")
        padding: [40]
        close_icon: 'vietcuppos/images/logo.png'
        right_action_items: [['location-exit',lambda x : app.show_alert()]]

        MDBackdropBackLayer:
            MyBackdropBackLayer:
                id: backlayer

        MDBackdropFrontLayer:
            MyBackdropFrontLayer:
                backdrop: backdrop
                backlayer: backlayer