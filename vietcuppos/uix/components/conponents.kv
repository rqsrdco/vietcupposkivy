#:import C kivy.utils.get_color_from_hex
#:import DEVICE_TYPE kivymd.material_resources.DEVICE_TYPE

<ListItemMenu>
    orientation: "lr-tb"
    spacing: dp(6)
    padding: dp(12)
    size_hint_y: None
    height: self.minimum_height

<ItemMenu>
    orientation: "vertical"
    size_hint: 1 / root.columns, None
    height: self.width * 1.2
    padding: dp(5)
    spacing: dp(5)
    on_release: root._choose_selection(_first_label.text, _second_label.text)

    FloatLayout:
        Image:
            pos_hint: {"center_x": .5, "center_y": .5}
            keep_ratio: True
            source: root.source

        MDIcon:
            id: _box
            pos_hint: {"center_x": 0.9, "center_y": 0.9}
            size_hint: None,None
            font_size: 0
            icon: "check-circle"
            color: C("#025F50")

    BoxLayout:
        size_hint_y: None
        height: dp(50)
        orientation: "vertical"
        spacing: dp(4)

        MDLabel:
            id: _first_label
            text: root.first_label
            theme_text_color: "Custom"
            text_color: C("#E3BFA3")
            halign: "center"

        MDLabel:
            id: _second_label
            text: root.second_label
            halign: "center"
            theme_text_color: "Custom"
            text_color: C("#F1E9C6")
            font_style: "Caption"

<PasswordFieldRec>:
    pwd_field: pwd
    #orientation: 'horizontal'
    size_hint_y: None
    height: pwd.height
    MDTextField:
        id: pwd
        hint_text: "Password"
        current_hint_text_color: [0,1,0,1]
        helper_text: "ffffff"
        helper_text_mode: "on_error"
        max_text_length: 36
        color_mode: "custom" #["primary", "accent", "custom"]
        mode: "rectangle" # ["rectangle", "fill"]
        line_color_normal:  [1,0,0,1]
        line_color_focus: [0,1,0,1]
        line_anim: True
        error_color: [1,0,0,1]
        fill_color: [0,0,0,.6]
        active_line: True
        icon_right_color: [0,0,1,1]
        text_color: [0,1,0,1]
        font_size: "18sp"
        focus: True

    MDIconButton:
        icon: "eye-off"
        ripple_scale: .5
        pos_hint: {"center_y": .5}
        pos: pwd.width - self.width + dp(8), 0
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            pwd.password = False if pwd.password is True else True

<PasswordFieldRound>
    size_hint_y: None
    height: pwd_text_field.height

    MDTextFieldRound:
        id: pwd_text_field
        hint_text: root.hint_text
        text: root.text
        password: True
        normal_color: app.theme_cls.accent_color
        color_active: get_color_from_hex("#F1E9C6")
        icon_left: "key-variant"
        padding:
            self._lbl_icon_left.texture_size[1] + dp(10) if self.icon_left else dp(15), (self.height / 2) - (self.line_height / 2), self._lbl_icon_right.texture_size[1] + dp(20), 0

    MDIconButton:
        icon: "eye-off"
        ripple_scale: .5
        pos_hint: {"center_y": .5}
        pos: pwd_text_field.width - self.width + dp(8), 0
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            pwd_text_field.password = False if pwd_text_field.password is True else True

<ListItemBill>
    spacing: dp(6)
    padding: 0,6,0,6

<ItemBill>
    size_hint_y: None
    height: 68
    orientation: 'horizontal'
    elevation: 12
    padding: "0dp", "6dp", "6dp", "6dp"
    radius: "12dp"
    md_bg_color: C("#F1E9C60F")
    AnchorLayout:
        anchor_x: "left"
        size_hint: None, None
        size: "68dp", "52dp"
        pos_hint: {'center_y': .5}
        canvas.before:
            StencilPush
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [root.width / 2,]
            StencilUse

        canvas.after:
            StencilUnUse
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [root.width / 2,]
            StencilPop
        MDBoxLayout:
            padding: 6,6,6,6
            #adaptive_size: True
            spacing: "8dp"
            pos_hint: {'center_y': .5}
            MDLabel:
                text: str(root.total_price)
                font_size: "12sp"
                theme_text_color: "Custom"
                text_color: C("#F1E9C6")
                bold: True
                halign: "left"
                pos_hint: {'center_y': .5}
            #LeftWidget:
                
    MDBoxLayout:
        id: content_box
        size_hint_y: None
        adaptive_height: True
        #orientation: 'horizontal'
        pos_hint: {'center_y': .5}
        ThreeLineAvatarIconListItem:
            id: item_infos
            text: root.item_name
            theme_text_color: "Custom"
            text_color: C("#E3BFA3")
            secondary_text: str(root.item_amount)
            secondary_theme_text_color: 'Custom'
            secondary_text_color: C("#FBD834")
            tertiary_text: str(root.item_price)
            tertiary_theme_text_color: 'Custom'
            tertiary_text_color: C("#E6C67C")
            adaptive_size: True
            #_txt_left_pad: "6dp"

            IconLeftWidget:
                id: minus_amount
                icon: "minus"
                user_font_size: "32sp"
                theme_text_color: "Custom"
                text_color: C("#E3BFA3")
                pos_hint: {'x': content_box.x + self.width ,'center_y': .5}
                on_release: root.minus_item_amount()

            IconRightWidget:
                id: plus_amount
                icon: "plus"
                user_font_size: "32sp"
                theme_text_color: "Custom"
                text_color: C("#025F50")
                pos_hint: {'x': content_box.width - self.width,'center_y': .5}
                on_release: root.plus_item_amount()
    AnchorLayout:
        anchor_x: "right"
        size_hint: None, None
        pos_hint: {'center_y': .5}
        size: "32dp", "32dp"
        MDBoxLayout:
            adaptive_size: True
            #spacing: "8dp"
            pos_hint: {'center_y': .5}
            MDIconButton:
                id: delete_item
                icon: "delete"
                user_font_size: "32sp"
                theme_text_color: "Custom"
                text_color: C("#502019")
                pos_hint: {'center_y': .5}
                on_release: root._on_delete_dispatch()
    
    #Widget:
    #    size_hint_x: None
    #    width: "32dp" if DEVICE_TYPE != "mobile" else "8dp"