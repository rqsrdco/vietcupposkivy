#:import C kivy.utils.get_color_from_hex

<CoffeeItem@MenuItem>

<DrinkItem@MenuItem>

<FoodsItem@MenuItem>

<OrderScreen>
    #on_leave: menu_op.reset()
    md_bg_color: C("#382B2A")

    MDBoxLayout:
        orientation: 'horizontal'
        padding: 0,0,12,12
        # MENU
        MDBoxLayout:
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: C("#F1E9C60F")
                Rectangle:
                    size: self.size
                    pos: self.pos
            MenuOperation:
                id: menu_op
                on_clear: root.clear_callback(*args)
                on_select_all: root.select_all_callback()
                on_ok: root.ok_callback()
                circles_size: dp(15)
                bottom_bar_color: C("#F1E9C60F")

                CoffeeItem:
                    id: coffee_list
                    ScrollView:
                        ListItemMenu:
                            id: coffee_selectionlist
                
                DrinkItem:
                    id: drink_list
                    ScrollView:
                        ListItemMenu:
                            id: drink_selectionlist

                FoodsItem:
                    id: foods_list
                    ScrollView:
                        ListItemMenu:
                            id: foods_selectionlist
        # BILLS
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 365
            BillsOperation:
                id: bill_op
                on_scan_qrcode: root.qrcode_callback()
                on_print_bill: root.print_bill_callback()
                on_paying: root: root.paying_callback()